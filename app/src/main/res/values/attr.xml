<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Battery">
        <attr name="batteryOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="batteryBg" format="reference" />
        <attr name="batteryColor" format="color"/>
        <attr name="batteryPower" format="integer"/>
    </declare-styleable>

    <declare-styleable name="BatteryViewOriginal2">
        <attr name="batteryBackground" format="reference" />
        <attr name="batteryLevel" format="reference" />
        <attr name="batteryChargeIcon" format="reference" />
    </declare-styleable>

